<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juet.attendance"
    android:versionCode="4"
    android:versionName="2.0.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.juet.attendance.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize" 
            
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.juet.attendance.SettingsView"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.juet.attendance.Subject"
            android:label="@string/title_activity_subject"
            android:parentActivityName="com.juet.attendance.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.juetcompanion.MainActivity" />
        </activity>
        
        <activity android:name="com.juet.attendance.About" 
              android:label="@string/title_activity_about"
              android:theme="@style/Theme.Sherlock.Light.DarkActionBar">
        <intent-filter>
           <action android:name="com.juet.attendance.About" />
           <category android:name="android.intent.category.DEFAULT" />
       </intent-filter>
    </activity>
        
        
        
    </application>

</manifest>
